#include<iostream>
using namespace std;

int main() {
	int no;
    int c;
    cin>>no>>c;
    int sum=0;
    int product =1;
    int i=1;
    if(c==1){
        while(i<=no){
        	sum=sum+i;
            i++;
        }
        cout<<sum<<endl;
    }
     if(c==2){
        while(i<=no){
            product=product*i;
            i++;
        }
        cout<<product<<endl;
    }
    if(c!=1 && c!=2){
        cout<<"-1"<<endl;
    }
	
}
